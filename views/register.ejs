<body>
    <h1>Register</h1>
    <form action="/register" method="POST" class="register">

<div>
<label for="name">Name</label>
<input type="text" name="name" id="name" required>
</div>
<div>
    <label for="email">Email Id</label>
    <input type="email" name="email" id="email" required>
    </div>
